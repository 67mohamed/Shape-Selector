<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainScreen"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="#ff33aaf8"
    android:id="@+id/MainScreenLayout">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minute Dash"
        android:id="@+id/Enter"
        android:onClick="onEnterClick"

        android:background="#ff297ebc"
        android:layout_above="@+id/space"
        android:layout_toRightOf="@+id/space2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </com.google.android.gms.ads.AdView>

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_above="@+id/adView"
        android:layout_alignLeft="@+id/Enter"
        android:layout_alignStart="@+id/Enter"
        android:id="@+id/space" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="The Shape Challenge"
        android:id="@+id/textView"
        android:layout_marginTop="169dp"
        android:textStyle="bold|normal"
        android:textSize="33dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="It&apos;s Harder Than It Looks"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_above="@+id/space"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2"
        android:id="@+id/space2" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_above="@+id/Enter"
        android:layout_toRightOf="@+id/space"
        android:layout_toEndOf="@+id/space"
        android:id="@+id/space3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Survival"
        android:id="@+id/button3"
        android:onClick="onEnter2Click"
        android:background="#ff297ebc"
        android:layout_above="@+id/space3"
        android:layout_alignRight="@+id/Enter"
        android:layout_alignEnd="@+id/Enter"
        android:layout_alignLeft="@+id/Enter"
        android:layout_alignStart="@+id/Enter" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_above="@+id/button3"
        android:layout_centerHorizontal="true"
        android:id="@+id/space4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instructions"
        android:id="@+id/instructions"
        android:onClick="onInstructionsClick"
        android:background="#ff297ebc"
        android:layout_above="@+id/space4"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3" />

</RelativeLayout>
